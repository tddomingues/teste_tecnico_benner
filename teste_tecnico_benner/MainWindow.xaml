<Window x:Class="teste_tecnico_benner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:teste_tecnico_benner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Tela Principal - Navegue" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="Tela Produtos" Click="BtnTelaProduto" Height="40" Margin="5"/>
            <Button Content="Tela Pessoa" Click="BtnTelaPessoa" Height="40" Margin="5"/>
            <Button Content="Tela Pedido" Click="BtnTelaPedido" Height="40" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
