<Window x:Class="teste_tecnico_benner.Views.CadastrarPedido"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CadastrarPedido" Height="550" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Tela de pedido" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="ID do Cliente:"/>
            <TextBox x:Name="txtIdCliente" Margin="0,0,0,10"/>

            <TextBlock Text="ID do Produto:"/>
            <TextBox x:Name="txtIdProduto" Margin="0,0,0,10"/>

            <TextBlock Text="Quantidade:"/>
            <TextBox x:Name="txtQtd" Text="1" Margin="0,0,0,10"/>

            <TextBlock Text="Forma de Pagamento:"/>
            <TextBox x:Name="txtPagamento" Margin="0,0,0,20"/>

            <Button Content="Salvar Pedido" Click="BtnSalvar" Height="30" Margin="0,0,0,20"/>

            <TextBlock Text="Pedidos:" FontWeight="Bold" Margin="0,0,0,5"/>
            <DataGrid x:Name="dgPedidos" Height="150" AutoGenerateColumns="True" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>