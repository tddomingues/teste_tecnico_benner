<Window x:Class="teste_tecnico_benner.Views.CadastrarPedido"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CadastrarPedido" Height="550" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Novo Pedido" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

            <TextBlock Text="Lista de Pessoas:"/>
            <ComboBox x:Name="boxPessoas" DisplayMemberPath="Nome" Margin="0,0,0,10"/>

            <TextBlock Text="Lista de Produtos:"/>
            <ComboBox x:Name="boxProdutos" DisplayMemberPath="Nome" Margin="0,0,0,10"/>

            <TextBlock Text="Quantidade:"/>
            <TextBox x:Name="txtQtd" Text="1" Margin="0,0,0,10"/>

            <TextBlock Text="Forma de Pagamento:"/>
            <ComboBox x:Name="cbPagamento" Margin="0,0,0,10">
                <ComboBoxItem Content="Dinheiro"/>
                <ComboBoxItem Content="Cartão"/>
                <ComboBoxItem Content="Boleto"/>
            </ComboBox>

            <Button Content="Finalizar Pedido" Click="BtnSalvar" Height="35" FontWeight="Bold" Margin="0,10,0,20"/>

            <TextBlock Text="Histórico de Pedidos:" FontWeight="Bold" Margin="0,0,0,5"/>
            <DataGrid x:Name="dgPedidos" Height="200" AutoGenerateColumns="True"/>
        </StackPanel>
    </Grid>
</Window>