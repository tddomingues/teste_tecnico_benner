<Window x:Class="teste_tecnico_benner.Views.CadastrarProduto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:teste_tecnico_benner.Views"
        mc:Ignorable="d"
        Title="CadastrarProduto" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Cadastro de Produto" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Nome do Produto:"/>
            <TextBox x:Name="txtNomeProduto" Margin="0,0,5,10"/>

            <TextBlock Text="Código:"/>
            <TextBox x:Name="txtCodigo" Margin="0,0,5,10"/>

            <TextBlock Text="Valor (R$):"/>
            <TextBox x:Name="txtValor" Margin="0,0,5,10"/>

            <Button Content="Salvar" Click="BtnSalvarProduto" Height="30" Margin="0,0,0,5"/>
            <Button Content="Excluir" Click="BtnExcluir" Height="30" Margin="0,0,0,5"/>
            <Button Content="Editar" Click="BtnEditar" Height="30" Margin="0,0,0,5"/>

            <TextBlock Text="Produtos:" Margin="0,0,0,10"/>
            <DataGrid x:Name="dgProdutos" Height="200" AutoGenerateColumns="True" SelectionMode="Single"/>
        </StackPanel>
    </Grid>
</Window>
