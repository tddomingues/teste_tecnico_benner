<Window x:Class="teste_tecnico_benner.Views.CadastrarPessoa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:teste_tecnico_benner.Views"
        mc:Ignorable="d"
        Title="CadastrarPessoa" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Cadastro de Clientes"  Margin="0,0,0,10"/>

            <TextBlock Text="Nome:"/>
            <TextBox x:Name="txtNome" Margin="0,0,5,10"/>

            <TextBlock Text="CPF:"/>
            <TextBox x:Name="txtCPF" Margin="0,0,5,10"/>

            <TextBlock Text="Endereço:"/>
            <TextBox x:Name="txtEndereco" Margin="0,0,5,10"/>

            <Button Content="Salvar" Click="BtnSalvar" Height="30" Margin="0,0,0,5"/>
            <Button Content="Excluir" Click="BtnExcluir" Height="30" Margin="0,0,0,5"/>
            <Button Content="Editar" Click="BtnEditar" Height="30" Margin="0,0,0,5"/>

            <TextBlock Text="Lista:" Margin="0,0,0,10"/>
            <DataGrid x:Name="dgPessoas" Height="200" AutoGenerateColumns="True"/>
        </StackPanel>
    </Grid>
</Window>
